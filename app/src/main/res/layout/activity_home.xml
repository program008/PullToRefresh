<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context="com.qf.csdn.other.ui.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <!-- <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/whitesmoke"
            ></android.support.v7.widget.Toolbar>-->
       <!-- android:layout_height="?attr/actionBarSize"-->
        <RelativeLayout
            android:id="@+id/home_head_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/home_head_iv_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/drawer"
                android:layout_marginLeft="15dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                />
            <!--设置标题-->
            <TextView
                android:id="@+id/home_head_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="头条"
                android:visibility="gone"
                />
            <!--设置搜索图标-->
            <ImageView
                android:id="@+id/home_head_iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:visibility="gone"
                />
            <!--我的页头的图标-->
            <ImageView
                android:id="@+id/home_my_head_iv_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/letter"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:visibility="gone"
                />
            <!--添加内容的图标-->
            <ImageView
                android:id="@+id/home_head_iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/read_add"
                android:layout_toLeftOf="@id/home_head_iv_search"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:visibility="gone"
                />
            <!--博客头的radiogroup-->
            <RadioGroup
                android:id="@+id/home_blog_head_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone">
                <RadioButton
                    android:id="@+id/home_blog_head_rb_dy"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="订阅"
                    android:textSize="14sp"
                    android:textColor="@color/color_home_head_text"
                    android:button="@null"
                    android:background="@drawable/selector_home_blog_head_rg_left"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/home_blog_head_rb_zj"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="专家"
                    android:textSize="14sp"
                    android:textColor="@color/color_home_head_text"
                    android:background="@drawable/selector_home_blog_head_rg_right"
                    android:gravity="center"
                    android:button="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    />
            </RadioGroup>
            <!--问答页头的radiogroup-->
            <RadioGroup
                android:id="@+id/home_ask_head_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <RadioButton
                    android:id="@+id/home_ask_head_rb_all"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="全部"
                    android:textSize="14sp"
                    android:textColor="@color/color_home_head_text"
                    android:button="@null"
                    android:background="@drawable/selector_home_blog_head_rg_left"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/home_ask_head_rb_xs"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="悬赏"
                    android:textSize="14sp"
                    android:textColor="@color/color_home_head_text"
                    android:button="@null"
                    android:background="@drawable/selector_home_ask_head_rg_center"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    />
                <RadioButton
                    android:id="@+id/home_ask_head_rb_dy"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="订阅"
                    android:textSize="14sp"
                    android:textColor="@color/color_home_head_text"
                    android:background="@drawable/selector_home_blog_head_rg_right"
                    android:gravity="center"
                    android:button="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    />
            </RadioGroup>
            <!--论坛页头的radiogroup-->
            <RadioGroup
                android:id="@+id/home_bbs_head_rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone">
                <RadioButton
                    android:id="@+id/home_bbs_head_rb_cymk"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:text="常用版块"
                    android:textSize="14sp"
                    android:textColor="@color/color_home_head_text"
                    android:button="@null"
                    android:background="@drawable/selector_home_blog_head_rg_left"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/home_bbs_head_rb_tjrt"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:text="推荐热帖"
                    android:textSize="14sp"
                    android:textColor="@color/color_home_head_text"
                    android:background="@drawable/selector_home_blog_head_rg_right"
                    android:gravity="center"
                    android:button="@null"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    />
            </RadioGroup>

        </RelativeLayout>
        <!-- 一条基准线-->
        <View style="@style/public_gray_horizontal_line"/>
        <FrameLayout
            android:id="@+id/home_content_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
        </FrameLayout>
    </LinearLayout>
    <!--<android.support.design.widget.NavigationView
        android:id="@+id/nvLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/layout_drawer_nvhead"
        app:menu = "@menu/drawer_menu"
        android:background="#fff"
        />-->
    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#2B2F3E"
        android:divider="@color/gray"
        android:dividerHeight="0.5dp" >

        <LinearLayout
            android:id="@+id/drawerLayout_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <com.qf.csdn.other.widget.CircleImageView
                android:id="@+id/home_drawer_head_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/default_avatar"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="30dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/home_drawer_head_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="program009"
                    />
                <TextView
                    android:id="@+id/home_drawer_head_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orangered"
                    android:text="100 C币"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 一条基准线-->
        <View style="@style/public_gray_horizontal_line"
            android:id="@+id/drawerLayout_line1"
            android:layout_below="@id/drawerLayout_header"/>
        <!--抽屉里条目-->
        <LinearLayout
            android:id="@+id/drawerLayout_item_headline_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_home_drawer_menu_item"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_below="@id/drawerLayout_line1"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_drawer_item_read_iv"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="头条"
                android:textSize="12sp"
                android:textColor="@color/color_home_drawer_menu_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <!-- 一条基准线-->
        <View style="@style/public_gray_horizontal_line"
            android:id="@+id/drawerLayout_line2"
            android:layout_below="@id/drawerLayout_item_headline_ll"
            />

        <LinearLayout
            android:id="@+id/drawerLayout_item_blog_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_home_drawer_menu_item"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_below="@id/drawerLayout_line2"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_drawer_item_blog_iv"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="博客"
                android:textSize="12sp"
                android:textColor="@color/color_home_drawer_menu_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <!-- 一条基准线-->
        <View style="@style/public_gray_horizontal_line"
            android:id="@+id/drawerLayout_line3"
            android:layout_below="@id/drawerLayout_item_blog_ll"
            />

        <LinearLayout
            android:id="@+id/drawerLayout_item_ask_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_home_drawer_menu_item"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_below="@id/drawerLayout_line3"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_drawer_item_ask_iv"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="问答"
                android:textSize="12sp"
                android:textColor="@color/color_home_drawer_menu_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <!-- 一条基准线-->
        <View style="@style/public_gray_horizontal_line"
            android:id="@+id/drawerLayout_line4"
            android:layout_below="@id/drawerLayout_item_ask_ll"
            />

        <LinearLayout
            android:id="@+id/drawerLayout_item_bbs_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_home_drawer_menu_item"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_below="@id/drawerLayout_line4"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_drawer_item_bbs_iv"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="论坛"
                android:textSize="12sp"
                android:textColor="@color/color_home_drawer_menu_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <!-- 一条基准线-->
        <View style="@style/public_gray_horizontal_line"
            android:id="@+id/drawerLayout_line5"
            android:layout_below="@id/drawerLayout_item_bbs_ll"
            />

        <LinearLayout
            android:id="@+id/drawerLayout_item_my_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_home_drawer_menu_item"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_below="@id/drawerLayout_line5"
            android:padding="10dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_drawer_item_my_iv"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@color/color_home_drawer_menu_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <!-- 一条基准线-->
        <View style="@style/public_gray_horizontal_line"
            android:id="@+id/drawerLayout_line6"
            android:layout_below="@id/drawerLayout_item_my_ll"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/home_drawer_btn_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间模式"
                android:textColor="@color/gray"
                android:drawableLeft="@drawable/night"
                android:background="@drawable/shape_home_drawer_btn"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                />
            <TextView
                android:id="@+id/home_drawer_btn_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日间模式"
                android:textColor="@color/gray"
                android:drawableLeft="@drawable/day"
                android:background="@drawable/shape_home_drawer_btn"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:clickable="true"
                />


        </LinearLayout>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>